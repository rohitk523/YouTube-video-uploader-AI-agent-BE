# Application Settings
APP_NAME="YouTube Shorts Creator API"
VERSION="1.0.0"
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/youtube_shorts

# File Upload Settings
MAX_FILE_SIZE_MB=100
UPLOAD_DIRECTORY=./uploads
ALLOWED_VIDEO_TYPES=mp4,mov,avi,mkv
ALLOWED_TRANSCRIPT_TYPES=txt,md

# File Paths
STATIC_DIRECTORY=./static
TEMP_DIRECTORY=./temp

# YouTube API Configuration
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Background Jobs Configuration
REDIS_URL=redis://localhost:6379
JOB_TIMEOUT_MINUTES=30
CLEANUP_INTERVAL_HOURS=24

# Google ADK Configuration (when available)
# ADK_PROJECT_ID=your_adk_project_id
# ADK_CREDENTIALS_PATH=./credentials/adk-service-account.json

# Logging
LOG_LEVEL=INFO

# Production Settings (for deployment)
WORKERS=4
PORT=8000
HOST=0.0.0.0 